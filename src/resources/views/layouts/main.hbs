    <script>
        document.addEventListener("DOMContentLoaded", function() {

            function handleFade() {
                var fadeElement = document.querySelectorAll(".fade-element");
                var isElementVisible = false;
                if (isElementVisible) return;
                for (var i = 0; i < fadeElement.length; i++) {
                    if (fadeElement[i] == null) return;
                    const elementPosition = fadeElement[i].getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    //console.log(elementPosition+300)
                    //console.log(windowHeight)
                    if (elementPosition+300 < windowHeight) {
                        fadeElement[i].classList.add("fade-in");
                        isElementVisible = true;
                    }else{
                        fadeElement[i].classList.remove("fade-in");
                        isElementVisible = false;
                    }
                }
            }

            window.addEventListener("scroll", handleFade);
            window.addEventListener("load", handleFade);
        });
    </script>

